<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= current_page.data.title %> - Florian Dejonckheere</title>

    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <nav class="nav">
      <ul>
        <% sitemap.resources.sort_by { |r| r.data.order || 0 }.each do |page| %>
          <% next unless page.data.title.present? && page.metadata[:options][:locale] == I18n.locale %>
          <li class="<%= 'active' if current_page == page %>">
            <%= link_to page.data.title, page.url %>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="column">
      <hr class="stripe">
<%= yield.gsub(/^/, '      ') %>
    </div>
  </body>
</html>
